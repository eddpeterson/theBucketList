!!! XML
!!!
%head
  %title The bucket list
  = stylesheet_link_tag :application
  = javascript_include_tag :application
  = csrf_meta_tag
  <!--[if lt IE 8]><link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->

%body
  .container
    / HEAD
    %div{:class => "span-4 colborder"}
      = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) 
      = render "application/facebook_button"
      =link_to "The Bucket List", "/"
      .quiet
        %i Control your own destiny
    %div{:class => "span-12 menu"}
      %li=link_to "Home", root_path #"/" 
      /%li=link_to "Timeline", timeline_path
      = render "timelines/progress"
      %li=link_to "About", "/about"
      %li=link_to "Friends", friends_path
    %div{:class => "span-6 last"}

    %hr

    / MAIN
    - unless notice.blank?
      .notice= notice
    - unless alert.blank?
      .alert= alert 
      
    = yield
    / FOOT 
    %hr
    / %div{:class => "span-24 centerText"}
    /   = render :partial => "foot"
    / %div{:class => "span-24 centerText"}
    /   = render :partial => "/interests/new"
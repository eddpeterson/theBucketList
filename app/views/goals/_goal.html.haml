%li{:class => "ui-state-default one"}
  %span{:id => goal_id, :class => "frame_item"}
    %span{:class => "frame_item_readonly"}
      %span{:class => "ui-icon ui-icon-trash"}
      %span.title= goal_title
    %span{:class => "frame_item_rename"}
      %input{:type => "text", :class => "rename_title", :name => "rename_title", :value => goal_title}
      %span.save_rename Save
      %span.cancel_rename Cancel